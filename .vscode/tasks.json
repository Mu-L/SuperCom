    {
      "label": "build",
      "type": "process",
      "command": "D:\\soft\\MSBuildTools\\MSBuild\\Current\\Bin\\amd64\\MSBuild.exe",
      // "command": "C:\\\\Program Files (x86)\\\\Microsoft Visual Studio\\\\2017\\\\Professional\\\\MSBuild\\\\15.0\\\\Bin\\\\MSBuild.exe",
      "args": ["${workspaceRoot}/SuperCom/SuperCom.csproj"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "rmdir",
      "type": "shell",
      "args": ["/s", "/q", "${workspaceRoot}\\SuperCom\\bin\\Debug"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "rebuild",
      "dependsOn": ["clean", "build"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "rebuild and run",
      "command": "${workspaceRoot}/SuperCom/bin/Debug/SuperCom.exe",
      "dependsOn": ["rebuild"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/SuperCom/SuperCom.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SuperCom/SuperCom.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "msbuild-debug",
      "type": "shell",
      "command": "msbuild",
      "args": ["/p:Configuration=Debug", "/t:build", "-m"],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
